<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	
	<!-- Button style when pressed -->
	<item android:state_pressed="true">
		<shape>
			<stroke android:width="3dp"
		        android:color="@color/light_pressed" />
		
		  	<corners android:radius="5dp" />
		
		  	<gradient android:angle="270"
				android:centerColor="@color/green_button"
				android:endColor="@color/green_button"
				android:startColor="@color/green_button" />
		</shape>
	</item>
	
	<!-- Button style when disabled -->
	<item android:state_enabled="false">
	    <shape>
			<stroke android:width="3dp"
		        android:color="@color/light_pressed" />
		
		  	<corners android:radius="5dp" />
		
		  	<gradient android:angle="270"
				android:centerColor="@color/light_gray"
				android:endColor="@color/light_gray"
				android:startColor="@color/light_gray" />
		</shape>
	</item>
	
	<!-- Default button style -->
	<item>
		<shape>
			<stroke android:width="3dp"
		        android:color="@color/light_pressed" />
		
		  	<corners android:radius="5dp" />
		
		  	<gradient android:angle="270"
				android:centerColor="@color/dark_gray"
				android:endColor="@color/dark_gray"
				android:startColor="@color/dark_gray" />
		</shape>
	</item>
</selector>