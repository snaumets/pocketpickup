<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" 
          android:exitFadeDuration="@android:integer/config_shortAnimTime">
	<!-- Button style when pressed -->
	<item android:state_pressed="true">
		<shape>
			<stroke android:width="3dp"
		        android:color="@color/light_pressed" />
		
		  	<corners android:radius="5dp" />
		
		  	<gradient android:angle="270"
				android:centerColor="@color/map_tile_bg_solid_pressed"
				android:endColor="@color/map_tile_bg_solid_pressed"
				android:startColor="@color/map_tile_bg_solid_pressed" />
		</shape>
	</item>
    
	<!-- Button style when disabled -->
	<item android:state_enabled="false">
	    <shape>
			<stroke android:width="3dp"
		        android:color="@color/light_pressed" />
		
		  	<corners android:radius="5dp" />
		
		  	<gradient android:angle="270"
				android:centerColor="@color/light_gray"
				android:endColor="@color/light_gray"
				android:startColor="@color/light_gray" />
		</shape>
	</item>
	
	<!-- Default button style -->
	<item>
		<shape>
			<stroke android:width="3dp"
		        android:color="@color/light_pressed" />
		
		  	<corners android:radius="5dp" />
		
		  	<gradient android:angle="270"
				android:centerColor="@color/medium_gray"
				android:endColor="@color/medium_gray"
				android:startColor="@color/medium_gray" />
		</shape>
	</item>
</selector>